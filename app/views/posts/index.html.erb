<h1>Listing Posts</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Update', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post),method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'New post', new_post_path %>
