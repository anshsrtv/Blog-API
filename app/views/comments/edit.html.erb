<h1>Edit Comment</h1>
<%= form_with(model: [ @post, @comment ],  scope: :comment, url: post_comment_path, method: :put, local: true) do |form| %>
    <p>
      <%= form.label :Username %><br>
      <%= form.text_field :username %>
    </p>
    <p>
      <%= form.label :Comment %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
<% end %>
<%= link_to 'Back', @post %>